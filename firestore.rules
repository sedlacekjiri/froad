rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== USER COLLECTION RULES =====
    match /users/{userId} {
      // Allow anyone to read user profiles
      allow read: if true;

      // Allow user creation during signup (unauthenticated)
      allow create: if request.auth == null || request.auth.uid == userId;

      // Allow users to update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;

      // Prevent deletion
      allow delete: if false;
    }

    // ===== MESSAGES COLLECTION RULES =====
    match /messages/{groupId}/msgs/{msgId} {
      // Only authenticated users with access can read/write messages
      allow read, write: if request.auth != null
                          && exists(/databases/$(database)/documents/users/$(request.auth.uid))
                          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.access == true;
    }

    // ===== LIVE LOCATIONS RULES =====
    match /liveLocations/{userId} {
      // Anyone can read live locations
      allow read: if true;

      // Users can only write their own location
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ===== RATING SYSTEM RULES =====

    // Rating stats (anyone can read, authenticated users can write)
    match /ratings/{roadId} {
      allow read: if true;  // Anyone can read rating stats
      allow write: if request.auth != null // Authenticated users can update stats
                   && request.resource.data.averageRating is number
                   && request.resource.data.averageRating >= 0
                   && request.resource.data.averageRating <= 5
                   && request.resource.data.totalRatings is number
                   && request.resource.data.totalRatings >= 0;
    }

    // User ratings (one rating per user per road)
    match /ratings/{roadId}/userRatings/{userId} {
      // Anyone can read ratings
      allow read: if true;

      // User can only write their own rating
      allow create, update: if request.auth != null
                           && request.auth.uid == userId
                           && request.resource.data.rating is number
                           && request.resource.data.rating >= 1
                           && request.resource.data.rating <= 5;

      // User can delete their own rating
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }
  }
}
